                }, 
                {
                    "type": "integer", 
                    "name": "price_fish_net", 
                    "label": "Market price of fishing net"
                }, 
                {
                    "type": "integer", 
                    "name": "price_fish_boat", 
                    "label": "Market price of fishing boat"
                }, 
                {
                    "type": "integer", 
                    "name": "cost_docking", 
                    "label": "Cost of docking boat / landing facility"
                }
            ], 
            "type": "repeat", 
            "name": "fish", 
            "label": "Fish"
        }, 
        {
            "type": "note", 
            "name": "instructions_facilities", 
            "label": "I will now ask you about warehousing facilities in the LGA"
        }, 
        {
            "children": [
                {
                    "type": "integer", 
                    "name": "num_total_storage", 
                    "label": "Total number of %(label)s"
                }, 
                {
                    "bind": {
                        "relevant": "../num_total_storage>0"
                    }, 
                    "type": "integer", 
                    "name": "num_functioning_storage", 
                    "label": "Number of %(label)s functioning"
                }, 
                {
                    "bind": {
                        "relevant": "../num_total_storage>0"
                    }, 
                    "type": "integer", 
                    "name": "num_need_rehab_storage", 
                    "label": "Number of %(label)s that require rehabilitation"
                }, 
                {
                    "bind": {
                        "relevant": "../num_total_storage>0"
                    }, 
                    "type": "integer", 
                    "name": "num_staff_storage", 
                    "label": "Number of staff working for %(label)s in LGA"
                }, 
                {
                    "bind": {
                        "relevant": "../num_total_storage>0"
                    }, 
                    "type": "integer", 
                    "name": "capacity_storage", 
                    "label": "Avg storage capacity of a %(label)s (in metric tons)"
                }, 
                {
                    "type": "integer", 
                    "name": "cost_construction_storage", 
                    "label": "Avg cost of construction of a %(label)s"
                }, 
                {
                    "type": "integer", 
                    "name": "cost_maintain_storage", 
                    "label": "Avg annual cost of maintaining a %(label)s"
                }, 
                {
                    "type": "integer", 
                    "name": "cost_rehab_storage", 
                    "label": "Avg annual cost of rehabilitating a %(label)s"
                }, 
                {
                    "type": "integer", 
                    "name": "cost_admin_storage", 
                    "label": "Avg additional administrative cost per %(label)s"
                }
            ], 
            "type": "loop", 
            "name": "warehousing", 
            "columns": [
                {
                    "name": "silos", 
                    "label": "Silos"
                }, 
                {
                    "name": "warehouses", 
                    "label": "Warehouses"
                }
            ], 
            "label": "Warehousing facilities"
        }, 
        {
            "type": "note", 
            "name": "instructions_orgs", 
            "label": "I will now ask you about producer-based organizations in the LGA."
        }, 
        {
            "children": [
                {
                    "type": "integer", 
                    "name": "num_orgs_total", 
                    "label": "%(label)s: Number of organizations"
                }, 
                {
                    "bind": {
                        "relevant": "../num_orgs_total>0"
