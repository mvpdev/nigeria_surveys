                {
                    "name": "agri_bank", 
                    "label": "Agricultural Bank"
                }, 
                {
                    "name": "state_bank", 
                    "label": "State Bank"
                }, 
                {
                    "name": "private_bank", 
                    "label": "Private Bank"
                }, 
                {
                    "name": "micro_finance_instit", 
                    "label": "Micro-finance Institution"
                }, 
                {
                    "name": "cooperative_finance", 
                    "label": "Cooperative"
                }, 
                {
                    "name": "other_finance", 
                    "label": "Other"
                }
