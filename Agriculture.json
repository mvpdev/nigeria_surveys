{
    "type": "survey", 
    "name": "Agriculture", 
    "children": [
        {
            "type": "include", 
            "name": "nigeria_surveys/intro.xls"
        }, 
        {
            "type": "text", 
            "name": "lga_agriculture_point_person_name", 
            "label": "Name of LGA Agriculture Point Person"
        }, 
        {
            "type": "phone number", 
            "name": "lga_agriculture_point_person_phone_number", 
            "label": "Contact Phone Number of LGA Agriculture Point Person"
        }, 
        {
            "type": "note", 
            "name": "instructions_crops", 
            "label": "Please list the MOST COMMONLY GROWN crops in the LGA. List in order of importance. All prices are market prices per kilogram in Naira."
        }, 
        {
            "children": [
                {
                    "type": "text", 
                    "name": "name", 
                    "label": "Name of crop"
                }, 
                {
                    "type": "integer", 
                    "name": "price_per_kg", 
                    "label": "Average crop price in the LGA"
                }, 
                {
                    "type": "integer", 
                    "name": "price_during_harvest", 
                    "label": "Average crop price during harvest"
                }, 
                {
                    "type": "integer", 
                    "name": "price_during_lean_season", 
                    "label": "Average crop price during lean season"
                }, 
                {
                    "type": "integer", 
                    "name": "price_seeds", 
                    "label": "Price of seeds"
                }, 
                {
                    "type": "integer", 
                    "name": "price_fertilizer", 
                    "label": "Price of fertilizer"
                }, 
                {
                    "type": "integer", 
                    "name": "price_pesticide", 
                    "label": "Price of pesticide"
                }, 
                {
                    "type": "integer", 
                    "name": "price_seedlings", 
                    "label": "Price of seedlings"
                }, 
                {
                    "type": "integer", 
                    "name": "price_tractor", 
                    "label": "Price of renting a tractor to plow 1 hectare"
                }
            ], 
            "type": "repeat", 
            "name": "crop", 
            "label": "Crop"
        }, 
        {
            "type": "note", 
            "name": "instructions_livestock", 
            "label": "Please list the MOST COMMONLY REARED livestock in the LGA. List in order of importance. All prices are market prices in Naira."
        }, 
        {
            "children": [
                {
                    "type": "text", 
                    "name": "name_livestock", 
                    "label": "Name of livestock"
                }, 
                {
                    "type": "integer", 
                    "name": "price_animal", 
                    "label": "Market price per animal"
                }, 
                {
                    "type": "integer", 
                    "name": "price_animal_harvest", 
                    "label": "Average price per animal during harvest"
                }, 
                {
                    "type": "integer", 
                    "name": "price_animal_lean_season", 
                    "label": "Average price per animal during during lean season"
                }, 
                {
                    "type": "integer", 
                    "name": "price_feed_kg", 
                    "label": "Market price of feed per kilogram"
                }, 
                {
                    "type": "integer", 
                    "name": "cost_vet", 
                    "label": "Cost of veterinary services per animal"
                }, 
                {
                    "type": "integer", 
                    "name": "cost_insemination", 
                    "label": "Cost of artificial insemination per animal"
                }, 
                {
                    "type": "integer", 
                    "name": "cost_shed", 
                    "label": "Cost of shed"
                }, 
                {
                    "type": "integer", 
                    "name": "cost_forrage_kg", 
                    "label": "Cost of forrage per kilogram"
                }
            ], 
            "type": "repeat", 
            "name": "livestock", 
            "label": "Livestock"
        }, 
        {
            "type": "note", 
            "name": "instructions_fish", 
            "label": "Please list the MOST COMMONLY REARED fish in the LGA. List in order of importance. All prices are market prices in Naira."
        }, 
        {
            "children": [
                {
                    "type": "text", 
                    "name": "name_fish", 
                    "label": "Name of fish"
